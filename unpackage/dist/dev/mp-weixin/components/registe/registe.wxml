<view class="container"><view class="register-container"><form data-event-opts="{{[['submit',[['handleSubmit',['$event']]]]]}}" class="register-form" bindsubmit="__e"><view class="register-title">用户注册</view><view class="form-item"><view class="input-label">手机号</view><input type="tel" placeholder="请输入手机号" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/></view><view class="form-item"><view class="input-label">设置密码</view><input type="password" placeholder="请输入密码" data-event-opts="{{[['input',[['__set_model',['','password','$event',[]]]]]]}}" value="{{password}}" bindinput="__e"/></view><view class="form-item"><view class="input-label">确认密码</view><input type="password" placeholder="再次输入密码" data-event-opts="{{[['input',[['__set_model',['','password2','$event',[]]]]]]}}" value="{{password2}}" bindinput="__e"/></view><view class="form-item"><view class="input-label">验证码</view><view class="code-input"><input type="number" placeholder="请输入验证码" data-event-opts="{{[['input',[['__set_model',['','code','$event',[]]]]]]}}" value="{{code}}" bindinput="__e"/><button class="code-btn" type="primary" disabled="{{!phone||sending}}" data-event-opts="{{[['tap',[['handleSendCode',['$event']]]]]}}" bindtap="__e">{{sending?seconds+'秒后重试':'获取验证码'}}</button></view></view><view class="form-item"><button class="register-btn" type="primary" disabled="{{!phone||!code||!password||!password2}}">注册</button></view></form></view></view>